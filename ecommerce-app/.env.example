# Server
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=ecommerce
DB_CONN_LIMIT=10

# JWT
JWT_ACCESS_SECRET=replace_with_strong_access_secret
JWT_REFRESH_SECRET=replace_with_strong_refresh_secret
JWT_ISSUER=ecommerce-app
JWT_AUDIENCE=ecommerce-users
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=30d

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=username
SMTP_PASSWORD=password
SMTP_FROM="Shop <no-reply@example.com>"

# File Uploads
MAX_IMAGE_SIZE_MB=5
